{
  "builds": [
    { "src": "api/*.php", "use": "vercel-php@0.7.1" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.php"
    },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
